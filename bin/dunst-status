#!/usr/bin/env bash

sleep_pid=0

toggle() {
  dunstctl set-paused toggle
  if [ "$sleep_pid" -ne 0 ]; then
    kill "$sleep_pid" >/dev/null 2>&1
  fi
}

trap toggle USR1

while true; do
  if [ "$(dunstctl is-paused)" == "true" ];then
    echo ""
  else
    echo ""
  fi
  sleep 5 &
  sleep_pid=$!
  wait
done

# vim: set filetype=sh :
